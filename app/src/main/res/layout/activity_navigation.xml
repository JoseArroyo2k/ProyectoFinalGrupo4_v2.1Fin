<!-- activity_navigation.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Parte Superior con Nombre del Usuario -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Bienvenido, Usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#673AB7"
        android:textColor="#FFFFFF"/>

    <!-- Sección de Supermercados -->
    <RelativeLayout
        android:id="@+id/layoutSupermercados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivSupermercados"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/carritosupermercado"/>

        <TextView
            android:id="@+id/tvSupermercados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSupermercados"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Supermercados"
            android:textSize="20sp"
            android:textColor="#673AB7"/>
    </RelativeLayout>

    <!-- Sección de Restaurantes -->
    <RelativeLayout
        android:id="@+id/layoutRestaurantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutSupermercados"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivRestaurantes"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/restaurante"/>

        <TextView
            android:id="@+id/tvRestaurantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivRestaurantes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Restaurantes"
            android:textSize="20sp"
            android:textColor="#673AB7"/>
    </RelativeLayout>

    <!-- Parte Inferior con Logofinal -->
    <ImageView
        android:id="@+id/ivLogoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        android:alpha="0.7"
        android:rotationY="72"
        android:src="@drawable/logofinal" />
</RelativeLayout>
